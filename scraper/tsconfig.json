{
    "extends": "../tsconfig.json",
    "compilerOptions": {
      "outDir": "./dist",
      "rootDir": "./src",
      "module": "NodeNext",
      "moduleResolution": "NodeNext",
      "target": "ES2020",
      "lib": ["ES2020", "DOM"],
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
  }